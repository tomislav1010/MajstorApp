@model TvrtkaVm
@{
    ViewData["Title"] = Model.Name;
    var vrste = (List<VrstaRadaVm>)ViewBag.Vrste as List<VrstaRadaVm> ?? new List<VrstaRadaVm>();
    var lokacije = (List<LokacijaVm>)ViewBag.Lokacije as List<LokacijaVm> ?? new List<LokacijaVm>();
}

<style>
    .page-wrapper {
        max-width: 900px;
        margin: 0 auto;
        padding: 32px 0 48px;
    }

    .page-header {
        display: flex;
        align-items: flex-start;
        justify-content: space-between;
        margin-bottom: 24px;
        gap: 16px;
    }

    .company-info {
        flex: 1;
    }

    .company-icon {
        width: 56px;
        height: 56px;
        background: linear-gradient(135deg, #667eea, #764ba2);
        border-radius: 14px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 28px;
        margin-bottom: 16px;
    }

    .company-name {
        font-size: 28px;
        font-weight: 700;
        color: #1e293b;
        margin: 0 0 8px;
    }

    .company-description {
        font-size: 15px;
        color: #64748b;
        line-height: 1.6;
        margin: 0;
    }

    .back-link {
        display: inline-flex;
        align-items: center;
        gap: 6px;
        font-size: 13px;
        font-weight: 500;
        color: #64748b;
        text-decoration: none;
        padding: 8px 14px;
        border-radius: 8px;
        border: 1px solid #e2e8f0;
        background: white;
        transition: all 0.2s ease;
        box-shadow: 0 1px 4px rgba(0,0,0,0.05);
    }

        .back-link:hover {
            border-color: #667eea;
            color: #667eea;
        }

    .info-grid {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 16px;
        margin-bottom: 20px;
    }

    .info-card {
        background: white;
        border: 1px solid #e2e8f0;
        border-radius: 12px;
        padding: 20px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
    }

    .info-card-title {
        font-size: 12px;
        font-weight: 700;
        color: #64748b;
        text-transform: uppercase;
        letter-spacing: 0.6px;
        margin: 0 0 14px;
        display: flex;
        align-items: center;
        gap: 6px;
    }

    .info-item {
        display: flex;
        align-items: flex-start;
        gap: 10px;
        margin-bottom: 10px;
        font-size: 14px;
    }

        .info-item:last-child {
            margin-bottom: 0;
        }

    .info-icon {
        flex-shrink: 0;
        font-size: 16px;
        margin-top: 2px;
    }

    .info-label {
        font-weight: 600;
        color: #475569;
        min-width: 60px;
    }

    .info-value {
        color: #1e293b;
    }

    .location-list {
        list-style: none;
        padding: 0;
        margin: 0;
    }

    .location-item {
        display: flex;
        align-items: center;
        gap: 10px;
        padding: 8px 0;
        font-size: 14px;
        color: #334155;
    }

    .location-dot {
        width: 8px;
        height: 8px;
        border-radius: 50%;
        background: linear-gradient(135deg, #667eea, #764ba2);
        flex-shrink: 0;
    }

    .empty-state {
        color: #94a3b8;
        font-size: 14px;
        font-style: italic;
    }

    .services-card {
        background: white;
        border: 1px solid #e2e8f0;
        border-radius: 12px;
        overflow: hidden;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
    }

    .services-header {
        padding: 18px 20px;
        background: linear-gradient(135deg, #f1f5f9, #f8fafc);
        border-bottom: 1px solid #e2e8f0;
    }

    .services-title {
        font-size: 12px;
        font-weight: 700;
        color: #64748b;
        text-transform: uppercase;
        letter-spacing: 0.6px;
        margin: 0;
        display: flex;
        align-items: center;
        gap: 6px;
    }

    .services-list {
        padding: 0;
        margin: 0;
    }

    .service-item {
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 16px 20px;
        border-bottom: 1px solid #f1f5f9;
        transition: background 0.15s ease;
    }

        .service-item:last-child {
            border-bottom: none;
        }

        .service-item:hover {
            background: #f8fafc;
        }

    .service-name {
        display: flex;
        align-items: center;
        gap: 10px;
        font-size: 15px;
        font-weight: 500;
        color: #1e293b;
    }

    .service-icon {
        width: 32px;
        height: 32px;
        background: linear-gradient(135deg, #667eea, #764ba2);
        border-radius: 8px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 14px;
        flex-shrink: 0;
    }

    .btn-request {
        display: inline-flex;
        align-items: center;
        gap: 6px;
        padding: 8px 18px;
        font-size: 13px;
        font-weight: 600;
        color: white;
        background: linear-gradient(135deg, #10b981, #059669);
        border: none;
        border-radius: 8px;
        text-decoration: none;
        cursor: pointer;
        transition: all 0.25s ease;
        box-shadow: 0 2px 8px rgba(16, 185, 129, 0.3);
    }

        .btn-request:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 14px rgba(16, 185, 129, 0.4);
            color: white;
        }

    @@media (max-width: 768px) {
        .page-wrapper {
            padding: 20px 0 32px;
        }

        .page-header {
            flex-direction: column;
            align-items: flex-start;
        }

        .info-grid {
            grid-template-columns: 1fr;
        }
    }
</style>

<div class="page-wrapper">

    <div class="page-header">
        <div class="company-info">
            <div class="company-icon">🏢</div>
            <h1 class="company-name">@Model.Name</h1>
            @if (!string.IsNullOrWhiteSpace(Model.Description))
            {
                <p class="company-description">@Model.Description</p>
            }
        </div>
        <a asp-action="Index" class="back-link">← Nazad</a>
    </div>

    <div class="info-grid">
        <div class="info-card">
            <h3 class="info-card-title">📞 Kontakt</h3>
            <div class="info-item">
                <span class="info-icon">✉️</span>
                <span class="info-label">Email:</span>
                <span class="info-value">@Model.Email</span>
            </div>
            <div class="info-item">
                <span class="info-icon">📱</span>
                <span class="info-label">Telefon:</span>
                <span class="info-value">@Model.Phone</span>
            </div>
        </div>

        <div class="info-card">
            <h3 class="info-card-title">📍 Lokacije</h3>
            @if (lokacije.Count == 0)
            {
                <div class="empty-state">Nema dodanih lokacija.</div>
            }
            else
            {
                <ul class="location-list">
                    @foreach (var l in lokacije)
                    {
                        <li class="location-item">
                            <span class="location-dot"></span>
                            @l.Name
                        </li>
                    }
                </ul>
            }
        </div>
    </div>

    <div class="services-card">
        <div class="services-header">
            <h3 class="services-title">🛠️ Vrste rada</h3>
        </div>
        @if (vrste.Count == 0)
        {
            <div style="padding: 32px 20px; text-align: center;">
                <div class="empty-state">Nema dodanih vrsta rada.</div>
            </div>
        }
        else
        {
            <ul class="services-list">
                @foreach (var v in vrste)
                {
                    <li class="service-item">
                        <div class="service-name">
                            <span class="service-icon">🛠️</span>
                            @v.Name
                        </div>
                        <a class="btn-request"
                           asp-controller="Zahtjev"
                           asp-action="Create"
                           asp-route-tvrtkaId="@Model.Id"
                           asp-route-vrstaRadaId="@v.Id">
                            ➤ Pošalji zahtjev
                        </a>
                    </li>
                }
            </ul>
        }
    </div>

</div>