@model TvrtkaVm
@{
    var vrste = (List<VrstaRadaVm>)ViewBag.Vrste as
    List<VrstaRadaVm> ?? new List<VrstaRadaVm>();
    var lokacije = (List<LokacijaVm>)ViewBag.Lokacije as
    List<LokacijaVm> ?? new List<LokacijaVm>();
}

<h2>@Model.Name</h2>

@if (!string.IsNullOrWhiteSpace(Model.Description))
{
    <p class="text-muted">@Model.Description</p>
}

<div class="row g-3 mb-4">
    <div class="col-md-6">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Kontakt</h5>
                <div><b>Email:</b> @Model.Email</div>
                <div><b>Telefon:</b> @Model.Phone</div>
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Lokacije</h5>

                @if (lokacije.Count == 0)
                {
                    <div class="text-muted">Nema dodanih lokacija.</div>
                }
                else
                {
                    <ul class="mb-0">
                        @foreach (var l in lokacije)
                        {
                            <li>@l.Name</li>
                        }
                    </ul>
                }
            </div>
        </div>
    </div>
</div>

<div class="card">
    <div class="card-body">
        <h5 class="card-title">Vrste rada</h5>

        @if (vrste.Count == 0)
        {
            <div class="text-muted">Nema dodanih vrsta rada.</div>
        }
        else
        {
            <div class="list-group">
                @foreach (var v in vrste)
                {
                    <div class="list-group-item d-flex justify-content-between align-items-center">
                        <div>@v.Name</div>

                        <a class="btn btn-sm btn-success"
                           asp-controller="Zahtjev"
                           asp-action="Create"
                           asp-route-tvrtkaId="@Model.Id"
                          >
                            Pošalji zahtjev
                        </a>
                    </div>
                }
            </div>
        }
    </div>
</div>

<a class="btn btn-secondary mt-3" asp-action="Index">Nazad</a>