@model List<TvrtkaVm>

<h2 class="mb-3">Tvrtke</h2>

@if (TempData["Err"] != null)
{
    <div class="alert alert-danger">@TempData["Err"]</div>
}

<form method="get" class="row g-2 align-items-center mb-3">
    <div class="col-md-4">
        <input class="form-control" name="q" value="@ViewBag.Q" placeholder="Pretraži po nazivu..." />
    </div>
    <div class="col-auto">
        <button class="btn btn-primary" type="submit">Traži</button>
        <a class="btn btn-success" asp-action="Create">+ Nova tvrtka</a>
    </div>
</form>

<table class="table table-striped table-hover align-middle">
    <thead>
        <tr>
            <th>Naziv</th>
            <th>Email</th>
            <th>Telefon</th>
            <th class="text-end">Akcije</th>
        </tr>
    </thead>
    <tbody>
@foreach (var t in Model)
{
        <tr id="row-@t.Id">>
            <td>@t.Name</td>
            <td>@t.Email</td>
            <td>@t.Phone</td>
            <td class="text-end">
                <a class="btn btn-sm btn-outline-primary" asp-action="Edit" asp-route-id="@t.Id">Uredi</a>
                <a class="btn btn-sm btn-outline-secondary" asp-action="Lokacije" asp-route-id="@t.Id">Lokacije</a>

                <form asp-action="Delete" asp-route-id="@t.Id" method="post" class="d-inline">
                    <button type="button"
                      class="btn btn-sm btn-outline-danger btn-delete"
                           data-id="@t.Id">
                                    Obriši
                    </button>
                </form>
            </td>
        </tr>
}
    </tbody>
</table>

@{
    int page = ViewBag.Page;
    int totalPages = ViewBag.TotalPages;
    string q = ViewBag.Q;
}

<nav class="d-flex justify-content-between align-items-center mt-3">
    <div>
        @if (page > 1)
        {
            <a class="btn btn-outline-secondary btn-sm"
               asp-action="Index" asp-route-page="@(page - 1)" asp-route-q="@q">← Prethodna</a>
        }
    </div>

    <span class="text-muted">Stranica / @totalPages</span>

    <div>
        @if (page < totalPages)
        {
            <a class="btn btn-outline-secondary btn-sm"
               asp-action="Index" asp-route-page="@(page + 1)" asp-route-q="@q">Sljedeća →</a>
        }
    </div>
</nav>

@section Scripts {
<script>
document.querySelectorAll(".btn-delete").forEach(btn => {
    btn.addEventListener("click", async () => {
        const id = btn.dataset.id;
        if (!confirm("Obrisati?")) return;

        const res = await fetch(`/Tvrtka/DeleteAjax/${id}`, {
            method: "DELETE"
        });

        if (res.ok) {
            document.getElementById(`row-${id}`)?.remove();
        } else {
            const txt = await res.text();
            alert("Greška: " + txt);
        }
    });
});
</script>
}
