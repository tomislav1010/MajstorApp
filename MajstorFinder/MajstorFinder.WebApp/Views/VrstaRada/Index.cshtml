@model List<VrstaRadaVm>
@{
    var tvrtke = (List<TvrtkaVm>)ViewBag.Tvrtke;
    int? selected = ViewBag.SelectedTvrtkaId as int?;
}

<h2>Vrste rada</h2>

@if (TempData["Err"] != null)
{
    <p style="color:red">@TempData["Err"]</p>
}

<form method="get">
    <input type="hidden" name="q" value="@ViewBag.Q" />

    <label>Filter po tvrtki:</label>
    <select name="tvrtkaId">
        <option value="">-- sve --</option>
        @foreach (var t in tvrtke)
        {
            <option value="@t.Id" selected="@(selected == t.Id)">@t.Name</option>
        }
    </select>

    <button type="submit">Primijeni</button>
</form>

<table>
    <thead>
        <tr>
            <th>Naziv</th>
            <th>Tvrtka</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var v in Model)
        {
            <tr>
                <td>@v.Name</td>
                <td>@v.TvrtkaName</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@v.Id">Uredi</a>
                    <form asp-action="Delete" asp-route-id="@v.Id" method="post" style="display:inline">
                        <button type="submit" onclick="return confirm('Obrisati?')">Obriši</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

            @{
    int page = ViewBag.Page;
    int totalPages = ViewBag.TotalPages;
    string q = ViewBag.Q;
}

<div>
    @if (page > 1)
    {
        <a asp-action="Index" asp-route-page="@(page - 1)" asp-route-q="@q">← Prethodna</a>
    }

    <span> Stranica  / @totalPages </span>

    @if (page < totalPages)
    {
        <a asp-action="Index" asp-route-page="@(page + 1)" asp-route-q="@q">Sljedeća →</a>
    }
</div>