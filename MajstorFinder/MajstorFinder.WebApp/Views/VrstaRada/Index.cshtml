@model List<VrstaRadaVm>

@{
    var tvrtke = (List<TvrtkaVm>)ViewBag.Tvrtke;
    int? selectedTvrtkaId = ViewBag.SelectedTvrtkaId as int?;

    int currentPage = ViewBag.Page == null ? 1 : (int)ViewBag.Page;
    int totalPages = ViewBag.TotalPages == null ? 1 : (int)ViewBag.TotalPages;
    string q = ViewBag.Q as string ?? "";
}

<h2>Vrste rada</h2>

@if (TempData["Err"] != null)
{
    <div class="alert alert-danger">@TempData["Err"]</div>
}

<form method="get" class="mb-3">
    <label>Tvrtka:</label>
    <select name="tvrtkaId">
        <option value="">-- sve --</option>
        @foreach (var t in tvrtke)
        {
            <option value="@t.Id" selected="@(selectedTvrtkaId == t.Id)">
                @t.Name
            </option>
        }
    </select>

    <input type="text" name="q" value="@q" placeholder="Pretraži..." />

    <button type="submit">Primijeni</button>
    <a asp-action="Create" class="btn btn-sm btn-primary">+ Nova vrsta rada</a>
</form>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Naziv</th>
            <th>Tvrtka</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var v in Model)
        {
            <tr id="row-@v.Id">
                <td>@v.Name</td>
                <td>@v.TvrtkaName</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@v.Id">Uredi</a>
                    |
                    <button type="button"
                            class="btn-delete"
                            data-id="@v.Id">
                        Obriši
                    </button>
                </td>
            </tr>
        }
    </tbody>
</table>

@if (totalPages > 1)
{
    <div class="mt-3">
        @if (currentPage > 1)
        {
            <a asp-action="Index"
               asp-route-page="@(currentPage - 1)"
               asp-route-q="@q"
               asp-route-tvrtkaId="@selectedTvrtkaId">
                ← Prethodna
            </a>
        }

        <span class="mx-2">
            Stranica @(currentPage) / @(totalPages)
        </span>

        @if (currentPage < totalPages)
        {
            <a asp-action="Index"
               asp-route-page="@(currentPage + 1)"
               asp-route-q="@q"
               asp-route-tvrtkaId="@selectedTvrtkaId">
                Sljedeća →
            </a>
        }
    </div>
}

@section Scripts {
    <script>
        document.querySelectorAll(".btn-delete").forEach(btn => {
            btn.addEventListener("click", async () => {
                const id = btn.dataset.id;
                if (!confirm("Obrisati vrstu rada?")) return;

                const res = await fetch(`/VrstaRada/DeleteAjax/${id}`, {
                    method: "DELETE"
                });

                if (res.ok) {
                    document.getElementById(`row-${id}`)?.remove();
                } else {
                    alert("Greška pri brisanju.");
                }
            });
        });
    </script>
}