@model List<VrstaRadaVm>
@{
    var tvrtke = (List<TvrtkaVm>)ViewBag.Tvrtke;
    int? selected = ViewBag.SelectedTvrtkaId as int?;
}

<h2>Vrste rada</h2>

@if (TempData["Err"] != null)
{
    <p style="color:red">@TempData["Err"]</p>
}

<form method="get">
    <label>Filter po tvrtki:</label>
    <select name="tvrtkaId">
        <option value="">-- sve --</option>
        @foreach (var t in tvrtke)
        {
            <option value="@t.Id" selected="@(selected == t.Id)">@t.Name</option>
        }
    </select>

    <input name="q" value="@ViewBag.Q" placeholder="Pretraži..." />

    <button type="submit">Primijeni</button>
    <a asp-action="Create">+ Nova vrsta rada</a>
</form>

<table>
    <thead>
        <tr>
            <th>Naziv</th>
            <th>Tvrtka</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var v in Model)
{
        <tr id="row-@v.Id">
            <td>@v.Name</td>
            <td>@v.TvrtkaName</td>
            <td>
                <a asp-action="Edit" asp-route-id="@v.Id">Uredi</a>

                <button type="button" class="btn-delete" data-id="@v.Id">
                    Obriši
                </button>
            </td>
        </tr>
}
    </tbody>
</table>

@{
    int page = ViewBag.Page;
    int totalPages = ViewBag.TotalPages;
    string q = ViewBag.Q;
}

<div>
    @if (page > 1)
    {
        <a asp-action="Index"
           asp-route-page="@(page - 1)"
           asp-route-q="@q"
           asp-route-tvrtkaId="@ViewBag.SelectedTvrtkaId">← Prethodna</a>
    }

    <span>Stranica @@page / @totalPages</span>

    @if (page < totalPages)
    {
        <a asp-action="Index"
           asp-route-page="@(page + 1)"
           asp-route-q="@q"
           asp-route-tvrtkaId="@ViewBag.SelectedTvrtkaId">Sljedeća →</a>
    }
</div>

@section Scripts {
<script>
document.querySelectorAll(".btn-delete").forEach(btn => {
    btn.addEventListener("click", async () => {
        const id = btn.dataset.id;
        if (!confirm("Obrisati?")) return;

        const res = await fetch(`/VrstaRada/DeleteAjax/${id}`, { method: "DELETE" });

        if (res.ok) document.getElementById(`row-${id}`)?.remove();
        else alert("Greška: " + await res.text());
    });
});
</script>
}