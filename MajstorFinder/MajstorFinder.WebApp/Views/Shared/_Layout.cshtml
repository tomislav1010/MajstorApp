<!DOCTYPE html>
<html lang="hr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MajstorFinder</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MajstorFinder.WebApp.styles.css" asp-append-version="true" />
</head>
<body>
    @{
        var userId = Context.Session.GetInt32("userId");
        var isAdmin = Context.Session.GetString("isAdmin") == "1";
        var isLoggedIn = userId.HasValue && userId.Value > 0;
    }

    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">MajstorFinder</a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#nav">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="nav">
                    <ul class="navbar-nav me-auto">
                        <!-- KLIJENT -->
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Browse" asp-action="Index">Pretraga</a>
                        </li>

                        @if (isLoggedIn)
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Zahtjev" asp-action="Moji">Moji zahtjevi</a>
                            </li>
                        }

                        <!-- ADMIN -->
                        @if (isAdmin)
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Tvrtka" asp-action="Index">Tvrtke</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="VrstaRada" asp-action="Index">Vrste rada</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Lokacija" asp-action="Index">Lokacije</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Zahtjev" asp-action="Index">Svi zahtjevi</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="User" asp-action="Create">+ Korisnik</a>
                            </li>
                        }
                    </ul>

                    <ul class="navbar-nav">
                        @if (isLoggedIn)
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Profile" asp-action="Index">Profil</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Auth" asp-action="Logout">Odjava</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Auth" asp-action="Login">Prijava</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container mt-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted mt-5">
        <div class="container py-3">
            &copy; 2025 - MajstorFinder
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>