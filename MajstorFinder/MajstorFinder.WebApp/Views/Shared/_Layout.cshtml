<!DOCTYPE html>
<html lang="hr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MajstorFinder</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/layout.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MajstorFinder.WebApp.styles.css" asp-append-version="true" />
</head>
<body>
    @{
        var userId = Context.Session.GetInt32("userId");
        var isAdmin = Context.Session.GetString("isAdmin") == "1";
        var isLoggedIn = userId.HasValue && userId.Value > 0;
    }

    <header>
        <nav class="navbar navbar-expand-lg navbar-custom">
            <div class="container">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                    <span class="brand-icon">MF</span>
                    <span class="brand-text">MajstorFinder</span>
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#nav" aria-controls="nav" aria-expanded="false" aria-label="Otvori izbornik">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="nav">
                    <ul class="navbar-nav nav-main">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Browse" asp-action="Index">
                                <span class="nav-icon">🔍</span> Pretraga
                            </a>
                        </li>

                        @if (isLoggedIn)
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Zahtjev" asp-action="Moji">
                                    <span class="nav-icon">📋</span> Moji zahtjevi
                                </a>
                            </li>
                        }

                        @if (isAdmin)
                        {
                            <li class="nav-item nav-divider"></li>
                            <li class="nav-item nav-label">Administracija</li>

                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Tvrtka" asp-action="Index">
                                    <span class="nav-icon">🏢</span> Tvrtke
                                </a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link" asp-controller="VrstaRada" asp-action="Index">
                                    <span class="nav-icon">🛠️</span> Vrste rada
                                </a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Lokacija" asp-action="Index">
                                    <span class="nav-icon">📍</span> Lokacije
                                </a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Zahtjev" asp-action="AdminIndex">
                                    <span class="nav-icon">📑</span> Svi zahtjevi
                                </a>
                            </li>

                            <!-- ADMIN: Kreiranje korisnika -->
                            <li class="nav-item">
                                <a class="nav-link nav-add-user" asp-controller="Profile" asp-action="Create">
                                    <span class="nav-icon">➕</span> Dodaj korisnika
                                </a>
                            </li>
                        }
                    </ul>

                    <ul class="navbar-nav nav-user ms-auto">
                        @if (isLoggedIn)
                        {
                            <li class="nav-item">
                                <a class="nav-link nav-profile" asp-controller="Profile" asp-action="Index">
                                    <div class="avatar-circle">P</div>
                                    Profil
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link nav-logout" asp-controller="Auth" asp-action="Logout">Odjava</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link nav-login" asp-controller="Auth" asp-action="Login">Prijava</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container mt-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer-custom">
        <div class="container">
            <div class="footer-content">
                <div class="footer-brand">
                    <span class="brand-icon">MF</span>
                    <span class="brand-text">MajstorFinder</span>
                </div>
                <p class="footer-copy">&copy; 2025. MajstorFinder — sva prava pridržana.</p>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>