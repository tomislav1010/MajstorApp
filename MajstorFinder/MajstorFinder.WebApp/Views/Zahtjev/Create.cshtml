@model MajstorFinder.BLL.DTOs.CreateZahtjevDto

@{
    ViewData["Title"] = "Novi zahtjev";
    var tvrtkaNaziv = ViewBag.TvrtkaNaziv as string;
    var vrstaNaziv = ViewBag.VrstaNaziv as string;
}

<p>TvrtkaId:@Model.TvrtkaId | VrstaRadaId: @Model.VrstaRadaId</p>
<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="mb-0">Novi zahtjev</h2>
    <a class="btn btn-outline-secondary"
       asp-controller="Browse"
       asp-action="Details"
       asp-route-id="@Model.TvrtkaId">← Nazad</a>
</div>

<div class="card shadow-sm">
    <div class="card-body">

        @if (!string.IsNullOrWhiteSpace(tvrtkaNaziv) || !string.IsNullOrWhiteSpace(vrstaNaziv))
        {
            <div class="alert alert-light border mb-3">
                @if (!string.IsNullOrWhiteSpace(tvrtkaNaziv))
                {
                    <div><b>Tvrtka:</b> @tvrtkaNaziv</div>
                }
                @if (!string.IsNullOrWhiteSpace(vrstaNaziv))
                {
                    <div><b>Vrsta rada:</b> @vrstaNaziv</div>
                }
            </div>
        }

        <form asp-action="Create" method="post">
            @Html.AntiForgeryToken()

            <input type="hidden" asp-for="TvrtkaId" />
            <input type="hidden" asp-for="VrstaRadaId" />

            <div class="mb-3">
                <label class="form-label" asp-for="Description">Opis posla *</label>
                <textarea asp-for="Description" class="form-control" rows="4" placeholder="Npr. trebam zamjenu slavine..."></textarea>
                <span asp-validation-for="Description" class="text-danger small"></span>
            </div>

            <div asp-validation-summary="All" class="text-danger small mb-2"></div>

            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-primary">Pošalji zahtjev</button>
                <a class="btn btn-outline-secondary"
                   asp-controller="Zahtjev"
                   asp-action="Create"
                   asp-route-id="@Model.TvrtkaId">Odustani</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}