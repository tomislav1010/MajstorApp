@model ZahtjevCreateVm

<h2>Novi zahtjev</h2>

<form method="post" class="card">
    <div class="card-body">
        <div asp-validation-summary="All" class="text-danger mb-3"></div>

        <input type="hidden" asp-for="TvrtkaId" />
        <input type="hidden" asp-for="VrstaRadaId" />
        <input type="hidden" asp-for="KorisnikId" />

        <div class="mb-3">
            <label class="form-label">Opis posla</label>
            <textarea class="form-control" asp-for="Description" rows="4"></textarea>
            <span class="text-danger" asp-validation-for="Description"></span>
        </div>

        <button class="btn btn-success" type="submit">Pošalji</button>
        <a class="btn btn-secondary" asp-controller="Browse" asp-action="Index">Nazad</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}