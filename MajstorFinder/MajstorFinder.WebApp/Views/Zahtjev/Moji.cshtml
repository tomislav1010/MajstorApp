@model List<ZahtjevVm>

<h2>Moji zahtjevi</h2>

@if (!Model.Any())
{
    <p>Nemaš još niti jedan zahtjev.</p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Tvrtka</th>
                <th>Vrsta rada</th>
                <th>Opis</th>
                <th>Status</th>
                <th>Datum</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var z in Model)
            {
                <tr>
                    <td>@z.TvrtkaName</td>
                    <td>@z.VrstaRadaName</td>
                    <td>@z.Description</td>
                    <td>
                        <span class="badge bg-secondary">@z.Status</span>
                    </td>
                    <td>@z.DateCreated.ToString("dd.MM.yyyy")</td>
                </tr>
            }
        </tbody>
    </table>
}

